<% layout("/layouts/boilerplate.ejs") %>
    <div class="row mt-3">
        <div class="col-8 offset-3">
            <h3> <b><%= listing.title %></b> </h3>
        </div>
        <div class="card col-6 offset-3 mt-3 show-card">
            <img src="<%= listing.image %>" class="card-img-top show-img" alt="listing_image">
            <div class="card-body">
                <p class="card-text">
                    <br>
                    <%= listing.description %>
                    <br>
                    &#8377;<%= listing.price.toLocaleString('en-IN') %>
                    <br>
                    <%= listing.location %>
                    <br>
                    <%= listing.country %>
                </p>
            </div>
        </div>
        <div class="btns mb-3">
            <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark offset-3 col-1 btn-edit">Edit</a>
            
            <form action="/listings/<%= listing._id %>?_method=DELETE" method="post">
                <button class="btn btn-dark offset-5">Delete</button>
            </form>
        </div>

        <hr>

        <div class="col-8 offset-3 mt-3 mb-3">
            <h4>Reviews</h4>
            <form action="">
                <div class="mb-3">
                    <label class="form-label" for="rating">Rating</label>
                    <input class="form-range" type="range" min="1" max="5" id="rating" name="review[rating">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="comment">Comments</label>
                    <br>
                    <textarea class="form-control" placeholder="Give Your Valuable Feedback Here!" name="review[comment]" id="comment" rows="5" cols="30"></textarea>
                </div>
                <button class="btn btn-outline-dark">Submit</button>
            </form>
        </div>

    </div>